{
    "manifest_version": 2,

    "default_locale": "en_US",

    "author": "ETY001",
    "homepage_url": "http://bm.to0l.cn/",

    "name": "__MSG_appname__",
    "description": "__MSG_appdesc__",
    "version": "2.3.3",

    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },

    "chrome_url_overrides" : {
      "newtab": "show.html"
    },
    
    "browser_action": {
      "default_icon": "img/icon-48.png"
    },

    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "css": ["css/mini.css"],
        "js": ["js/jquery-1.11.2.min.js", "js/mini.js"],
        "run_at":     "document_end"
      }
    ],

    "web_accessible_resources": ["show.html"],

    "options_page": "show.html",

    "background": {
      "scripts": ["js/google-analytics-bundle.js","js/libs.js","js/bookmark.js","js/background.js"],
      "persistent": false
    },

    "permissions": [
        "activeTab",
        "notifications",
        "bookmarks",
        "tabs",
        "background",
        "https://www.google-analytics.com/",
        "storage"
    ]
}
