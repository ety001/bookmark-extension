{
    "manifest_version": 2,

    "default_locale": "en",

    "name": "__MSG_appname__",
    "description": "__MSG_appdesc__",
    "version": "1.0",

    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/icon-19.png",
            "38": "img/icon-38.png"
        },
        "default_title": "__MSG_appname__",
        "default_popup": "popup.html"
    },

    "background": {
      "scripts": ["js/jquery-1.11.2.min.js","js/libs.js","js/background.js"],
      "persistent": true
    },

    "permissions": [
        "activeTab",
        "notifications",
        "bookmarks",
        "tabs",
        "background"
    ]
}
